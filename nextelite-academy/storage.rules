rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // CMS-managed folders - public read and write (no auth required)
    match /images/{allPaths=**} {
      allow read, write: if true;
    }
    
    match /gallery/{allPaths=**} {
      allow read, write: if true;
    }
    
    match /backgrounds/{allPaths=**} {
      allow read, write: if true;
    }
    
    match /logo/{allPaths=**} {
      allow read, write: if true;
    }
    
    match /attachments/{allPaths=**} {
      allow read, write: if true;
    }
    
    match /instructors/{allPaths=**} {
      allow read, write: if true;
    }
    
    match /blog/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Other folders - public read, authenticated write
    match /announcements/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /courses/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /blog/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /team/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

